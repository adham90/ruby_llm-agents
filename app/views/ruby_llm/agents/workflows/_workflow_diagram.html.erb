<%
  # Unified workflow diagram visualization
  # Renders a visual flow chart for any workflow type (sequential, parallel, routing)
  #
  # Required locals:
  #   steps: Array of step hashes with :name, :agent, :optional, :routing, :parallel, :parallel_group
  #
  # Optional locals:
  #   parallel_groups: Array of parallel group hashes
  #   input_schema_fields: Hash of input schema field definitions
  #   routes: Array of route definitions (for router workflows)

  steps = local_assigns[:steps] || []
  parallel_groups = local_assigns[:parallel_groups] || []
  input_schema_fields = local_assigns[:input_schema_fields] || {}
  routes = local_assigns[:routes] || []
%>

<% if steps.any? %>
  <!-- Workflow Flow Diagram -->
  <div class="py-6 overflow-x-auto">
    <div class="flex items-center justify-center gap-3 min-w-max px-4">
      <!-- Start Node -->
      <div class="flex flex-col items-center">
        <div class="w-12 h-12 flex items-center justify-center rounded-full bg-green-100 dark:bg-green-900/50 border-2 border-green-400 dark:border-green-600">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <span class="text-xs text-gray-500 dark:text-gray-400 mt-1">Start</span>
      </div>

      <!-- Arrow from start -->
      <div class="flex items-center text-gray-400 dark:text-gray-500">
        <svg class="w-8 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      </div>

      <%
        # Group steps into sequential items and parallel groups
        current_parallel_group = nil
        grouped_items = []

        steps.each do |step|
          if step[:parallel_group].present?
            pg = parallel_groups.find { |g| g[:name].to_s == step[:parallel_group].to_s }
            if current_parallel_group != step[:parallel_group]
              current_parallel_group = step[:parallel_group]
              grouped_items << { type: :parallel_group, group: pg, steps: [step] }
            else
              grouped_items.last[:steps] << step
            end
          else
            current_parallel_group = nil
            grouped_items << { type: :step, step: step }
          end
        end
      %>

      <% grouped_items.each_with_index do |item, index| %>
        <% if item[:type] == :step %>
          <% step = item[:step] %>
          <%
            # Determine step styling based on type
            if step[:routing]
              border_color = "border-amber-400 dark:border-amber-500"
              bg_color = "bg-gradient-to-br from-amber-50 to-orange-50 dark:from-amber-900/40 dark:to-orange-900/40"
              text_color = "text-amber-800 dark:text-amber-200"
              icon_color = "text-amber-500 dark:text-amber-400"
              shadow = "shadow-amber-100 dark:shadow-amber-900/20"
            else
              border_color = "border-indigo-300 dark:border-indigo-600"
              bg_color = "bg-gradient-to-br from-indigo-50 to-blue-50 dark:from-indigo-900/40 dark:to-blue-900/40"
              text_color = "text-indigo-800 dark:text-indigo-200"
              icon_color = "text-indigo-500 dark:text-indigo-400"
              shadow = "shadow-indigo-100 dark:shadow-indigo-900/20"
            end
          %>
          <!-- Step Node -->
          <div class="flex flex-col items-center">
            <div class="relative w-32 min-h-[4.5rem] flex flex-col items-center justify-center rounded-xl border-2 <%= border_color %> <%= bg_color %> <%= step[:optional] ? 'border-dashed' : '' %> shadow-lg <%= shadow %> p-3">
              <% if step[:routing] %>
                <!-- Routing diamond indicator -->
                <div class="absolute -top-2.5 -right-2.5 w-5 h-5 bg-amber-400 dark:bg-amber-500 rounded-md rotate-45 flex items-center justify-center shadow">
                  <svg class="w-3 h-3 text-white -rotate-45" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 11-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% end %>
              <span class="text-sm font-bold <%= text_color %> text-center leading-tight">
                <%= step[:name].to_s.titleize %>
              </span>
              <% if step[:agent].present? %>
                <span class="text-[10px] text-gray-500 dark:text-gray-400 mt-1 truncate max-w-28 text-center">
                  <%= step[:agent].to_s.gsub(/Agent$/, '') %>
                </span>
              <% end %>
            </div>
            <% if step[:optional] %>
              <span class="text-[10px] text-gray-400 dark:text-gray-500 mt-1 italic">(optional)</span>
            <% end %>
            <% if step[:timeout] %>
              <span class="text-[10px] text-blue-500 dark:text-blue-400 mt-0.5">⏱ <%= step[:timeout] %>s</span>
            <% end %>
          </div>

          <% if step[:routing] && step[:routes].present? %>
            <!-- Show routes as branching paths -->
            <div class="flex flex-col items-center gap-1 mx-2">
              <% step[:routes].each_with_index do |route, route_idx| %>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                  <span class="text-xs px-2 py-1 rounded-full <%= route[:default] ? 'bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-300' : 'bg-amber-100 dark:bg-amber-900/50 text-amber-700 dark:text-amber-300' %>">
                    <%= route[:name] %>
                    <% if route[:agent] %>
                      <span class="text-gray-400">→</span> <%= route[:agent].to_s.gsub(/Agent$/, '') %>
                    <% end %>
                  </span>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <!-- Parallel Group -->
          <div class="flex flex-col items-center">
            <div class="relative border-2 border-dashed border-purple-400 dark:border-purple-500 rounded-2xl p-4 bg-gradient-to-br from-purple-50/80 to-violet-50/80 dark:from-purple-900/30 dark:to-violet-900/30 shadow-lg shadow-purple-100 dark:shadow-purple-900/20">
              <!-- Parallel indicator badge -->
              <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
                <div class="bg-purple-500 dark:bg-purple-600 text-white rounded-full px-3 py-1 shadow-lg flex items-center gap-1">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z"/>
                  </svg>
                  <span class="text-[10px] font-bold uppercase tracking-wide">Parallel</span>
                </div>
              </div>

              <!-- Fork lines -->
              <div class="absolute -left-3 top-1/2 -translate-y-1/2 flex flex-col gap-1">
                <% item[:steps].size.times do %>
                  <div class="w-3 h-0.5 bg-purple-300 dark:bg-purple-600"></div>
                <% end %>
              </div>

              <div class="flex items-stretch gap-3 mt-2">
                <% item[:steps].each do |step| %>
                  <div class="flex flex-col items-center">
                    <div class="w-28 min-h-[3.5rem] flex flex-col items-center justify-center rounded-lg border-2 border-purple-300 dark:border-purple-600 bg-white dark:bg-gray-800 shadow-sm p-2 <%= step[:optional] ? 'border-dashed' : '' %>">
                      <span class="text-xs font-bold text-purple-700 dark:text-purple-300 text-center">
                        <%= step[:name].to_s.titleize %>
                      </span>
                      <% if step[:agent].present? %>
                        <span class="text-[9px] text-gray-500 dark:text-gray-400 truncate max-w-24 mt-0.5">
                          <%= step[:agent].to_s.gsub(/Agent$/, '') %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>

              <% if item[:group] && (item[:group][:fail_fast] || item[:group][:concurrency]) %>
                <div class="flex items-center justify-center gap-2 mt-2 text-[9px] text-purple-600 dark:text-purple-400">
                  <% if item[:group][:fail_fast] %>
                    <span class="bg-purple-200 dark:bg-purple-800 px-1.5 py-0.5 rounded font-medium">fail_fast</span>
                  <% end %>
                  <% if item[:group][:concurrency] %>
                    <span class="bg-purple-200 dark:bg-purple-800 px-1.5 py-0.5 rounded font-medium">max: <%= item[:group][:concurrency] %></span>
                  <% end %>
                </div>
              <% end %>

              <!-- Join lines -->
              <div class="absolute -right-3 top-1/2 -translate-y-1/2 flex flex-col gap-1">
                <% item[:steps].size.times do %>
                  <div class="w-3 h-0.5 bg-purple-300 dark:bg-purple-600"></div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Arrow between items -->
        <% unless index == grouped_items.length - 1 %>
          <% current_step = item[:type] == :step ? item[:step] : nil %>
          <% if current_step&.dig(:routing) && !current_step[:routes].present? %>
            <!-- Branching arrow for routing steps -->
            <div class="flex items-center text-amber-400 dark:text-amber-500">
              <svg class="w-8 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"/>
              </svg>
            </div>
          <% else %>
            <div class="flex items-center text-gray-400 dark:text-gray-500">
              <svg class="w-8 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
            </div>
          <% end %>
        <% end %>
      <% end %>

      <!-- Arrow to end -->
      <div class="flex items-center text-gray-400 dark:text-gray-500">
        <svg class="w-8 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      </div>

      <!-- End Node -->
      <div class="flex flex-col items-center">
        <div class="w-12 h-12 flex items-center justify-center rounded-full bg-red-100 dark:bg-red-900/50 border-2 border-red-400 dark:border-red-600">
          <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 10a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1v-4z"/>
          </svg>
        </div>
        <span class="text-xs text-gray-500 dark:text-gray-400 mt-1">End</span>
      </div>
    </div>
  </div>

  <!-- Legend -->
  <div class="flex items-center justify-center gap-6 py-3 border-t border-gray-100 dark:border-gray-700 text-xs text-gray-500 dark:text-gray-400">
    <div class="flex items-center gap-1.5">
      <div class="w-4 h-4 rounded border-2 border-indigo-300 dark:border-indigo-600 bg-indigo-50 dark:bg-indigo-900/40"></div>
      <span>Sequential Step</span>
    </div>
    <div class="flex items-center gap-1.5">
      <div class="w-4 h-4 rounded border-2 border-dashed border-purple-400 dark:border-purple-500 bg-purple-50 dark:bg-purple-900/30"></div>
      <span>Parallel Group</span>
    </div>
    <% if steps.any? { |s| s[:routing] } %>
      <div class="flex items-center gap-1.5">
        <div class="w-4 h-4 rounded border-2 border-amber-400 dark:border-amber-500 bg-amber-50 dark:bg-amber-900/40"></div>
        <span>Routing Step</span>
      </div>
    <% end %>
    <% if steps.any? { |s| s[:optional] } %>
      <div class="flex items-center gap-1.5">
        <div class="w-4 h-4 rounded border-2 border-dashed border-gray-400 dark:border-gray-500 bg-gray-50 dark:bg-gray-900/40"></div>
        <span>Optional</span>
      </div>
    <% end %>
  </div>

  <!-- Input Schema (if defined) -->
  <% if input_schema_fields.present? %>
    <div class="border-t border-gray-100 dark:border-gray-700 pt-4 mt-2">
      <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3 font-medium">
        Input Schema
      </p>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
        <% input_schema_fields.each do |name, field| %>
          <div class="flex items-start gap-2 py-2 px-3 rounded-lg bg-gray-50 dark:bg-gray-900/50 border border-gray-200 dark:border-gray-700">
            <span class="w-2 h-2 rounded-full mt-1.5 flex-shrink-0 <%= field[:required] ? 'bg-red-400' : 'bg-gray-300 dark:bg-gray-600' %>"></span>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-1.5">
                <span class="font-medium text-gray-700 dark:text-gray-300 text-sm">
                  <%= name %>
                </span>
                <span class="text-[10px] text-gray-400 dark:text-gray-500 bg-gray-100 dark:bg-gray-800 px-1.5 py-0.5 rounded">
                  <%= field[:type] %>
                </span>
              </div>
              <% if field[:default].present? || field[:default] == false %>
                <span class="text-[10px] text-gray-500 dark:text-gray-400 block mt-0.5">
                  default: <code class="bg-gray-100 dark:bg-gray-800 px-1 rounded"><%= field[:default].inspect %></code>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Step Details -->
  <div class="border-t border-gray-100 dark:border-gray-700 pt-4 mt-4">
    <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3 font-medium">
      Step Details
    </p>

    <div class="space-y-2">
      <% steps.each_with_index do |step, index| %>
        <%
          if step[:routing]
            badge_bg = "bg-amber-100 dark:bg-amber-900/50"
            badge_text = "text-amber-600 dark:text-amber-300"
            badge_border = "border-amber-200 dark:border-amber-800"
          elsif step[:parallel_group]
            badge_bg = "bg-purple-100 dark:bg-purple-900/50"
            badge_text = "text-purple-600 dark:text-purple-300"
            badge_border = "border-purple-200 dark:border-purple-800"
          else
            badge_bg = "bg-indigo-100 dark:bg-indigo-900/50"
            badge_text = "text-indigo-600 dark:text-indigo-300"
            badge_border = "border-indigo-200 dark:border-indigo-800"
          end
        %>
        <div class="flex items-start gap-3 py-3 px-4 rounded-lg bg-gray-50 dark:bg-gray-900/50 border border-gray-100 dark:border-gray-800">
          <span class="w-7 h-7 flex items-center justify-center rounded-full <%= badge_bg %> border <%= badge_border %> text-xs font-bold <%= badge_text %> flex-shrink-0">
            <%= index + 1 %>
          </span>
          <div class="flex-1 min-w-0">
            <div class="flex items-center flex-wrap gap-2">
              <span class="font-semibold text-gray-800 dark:text-gray-200">
                <%= step[:name].to_s.titleize %>
              </span>
              <% if step[:agent].present? %>
                <span class="text-gray-400 dark:text-gray-500">→</span>
                <code class="text-sm font-mono text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 px-2 py-0.5 rounded">
                  <%= step[:agent] %>
                </code>
              <% end %>

              <!-- Badges -->
              <% if step[:routing] %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 dark:bg-amber-900/50 text-amber-700 dark:text-amber-300">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 11-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  routing
                </span>
              <% end %>

              <% if step[:parallel_group] %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100 dark:bg-purple-900/50 text-purple-700 dark:text-purple-300">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z"/>
                  </svg>
                  parallel
                </span>
              <% end %>

              <% if step[:optional] %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400">
                  optional
                </span>
              <% end %>

              <% if step[:timeout] %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                  </svg>
                  <%= step[:timeout] %>s
                </span>
              <% end %>
            </div>

            <% if step[:description].present? %>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                <%= step[:description] %>
              </p>
            <% end %>

            <% if step[:routes].present? %>
              <div class="flex flex-wrap gap-2 mt-2">
                <% step[:routes].each do |route| %>
                  <span class="inline-flex items-center text-xs <%= route[:default] ? 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400' : 'bg-amber-50 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300' %> px-2 py-1 rounded-md">
                    <span class="font-medium"><%= route[:name] %></span>
                    <% if route[:agent] %>
                      <span class="mx-1 text-gray-400">→</span>
                      <span><%= route[:agent].to_s.gsub(/Agent$/, '') %></span>
                    <% end %>
                    <% if route[:default] %>
                      <span class="ml-1 text-gray-400">(default)</span>
                    <% end %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="py-8 text-center">
    <svg class="w-12 h-12 mx-auto text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"/>
    </svg>
    <p class="text-gray-500 dark:text-gray-400 mt-2">No workflow structure available</p>
  </div>
<% end %>
