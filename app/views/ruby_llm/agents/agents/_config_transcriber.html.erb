<%# Configuration partial for Transcriber types %>
<div class="font-mono text-xs">
  <span class="text-[10px] text-gray-400 dark:text-gray-600 uppercase tracking-wider">transcription settings</span>
  <div class="mt-1 space-y-px">
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">model</span>
      <span class="text-gray-900 dark:text-gray-200"><%= config[:model] %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">language</span>
      <span class="text-gray-900 dark:text-gray-200"><%= config[:language] ? config[:language].upcase : 'auto-detect' %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">format</span>
      <span class="text-gray-900 dark:text-gray-200"><%= config[:output_format] || :text %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">timestamps</span>
      <span class="text-gray-900 dark:text-gray-200"><%= (config[:include_timestamps] && config[:include_timestamps] != :none) ? config[:include_timestamps].to_s.titleize : 'none' %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">cache</span>
      <% if config[:cache_enabled] %>
        <span class="text-green-500">enabled</span>
        <span class="text-gray-400 dark:text-gray-600">(<%= config[:cache_ttl].inspect %>)</span>
      <% else %>
        <span class="text-gray-400 dark:text-gray-600">disabled</span>
      <% end %>
    </div>
    <% fallback_models = Array(config[:fallback_models]).compact %>
    <% if fallback_models.any? %>
      <div class="flex items-center gap-3 py-1 px-2 -mx-2">
        <span class="w-24 text-gray-400 dark:text-gray-600">fallbacks</span>
        <span class="text-gray-900 dark:text-gray-200"><%= fallback_models.join(" â†’ ") %></span>
      </div>
    <% end %>
  </div>
</div>
