<%# Configuration partial for Moderator types %>
<div class="font-mono text-xs">
  <span class="text-[10px] text-gray-400 dark:text-gray-600 uppercase tracking-wider">moderation settings</span>
  <div class="mt-1 space-y-px">
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">model</span>
      <span class="text-gray-900 dark:text-gray-200"><%= config[:model] %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">threshold</span>
      <span class="text-gray-900 dark:text-gray-200"><%= config[:threshold] || 'default' %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">categories</span>
      <% if config[:categories].present? %>
        <span class="text-gray-900 dark:text-gray-200"><%= config[:categories].join(", ") %></span>
      <% else %>
        <span class="text-gray-400 dark:text-gray-600">all categories</span>
      <% end %>
    </div>
  </div>
</div>
