<%# Configuration partial for Speaker types %>
<div class="font-mono text-xs">
  <span class="text-[10px] text-gray-400 dark:text-gray-600 uppercase tracking-wider">text-to-speech settings</span>
  <div class="mt-1 space-y-px">
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">model</span>
      <span class="text-gray-900 dark:text-gray-200"><%= config[:model] %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">provider</span>
      <span class="text-gray-900 dark:text-gray-200"><%= config[:provider] ? config[:provider].to_s.titleize : 'default' %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">voice</span>
      <span class="text-gray-900 dark:text-gray-200"><%= config[:voice] || 'default' %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">speed</span>
      <span class="text-gray-900 dark:text-gray-200"><%= config[:speed] || 1.0 %>x</span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">format</span>
      <span class="text-gray-900 dark:text-gray-200"><%= config[:output_format] || :mp3 %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">streaming</span>
      <span class="<%= config[:streaming] ? 'text-green-500' : 'text-gray-400 dark:text-gray-600' %>"><%= config[:streaming] ? 'enabled' : 'disabled' %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">ssml</span>
      <span class="<%= config[:ssml_enabled] ? 'text-green-500' : 'text-gray-400 dark:text-gray-600' %>"><%= config[:ssml_enabled] ? 'enabled' : 'disabled' %></span>
    </div>
    <div class="flex items-center gap-3 py-1 px-2 -mx-2">
      <span class="w-24 text-gray-400 dark:text-gray-600">cache</span>
      <% if config[:cache_enabled] %>
        <span class="text-green-500">enabled</span>
        <span class="text-gray-400 dark:text-gray-600">(<%= config[:cache_ttl].inspect %>)</span>
      <% else %>
        <span class="text-gray-400 dark:text-gray-600">disabled</span>
      <% end %>
    </div>
  </div>
</div>
