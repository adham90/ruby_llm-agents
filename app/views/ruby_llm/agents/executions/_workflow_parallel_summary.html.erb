<%# Parallel Workflow Summary - Shows concurrent branch comparison %>
<%# @param execution [RubyLLM::Agents::Execution] The parallel workflow execution %>

<% branches = execution.parallel_branches_detail %>
<% max_duration = branches.map { |b| b[:duration_ms] || 0 }.max %>

<div class="space-y-4">
  <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center gap-2">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
    </svg>
    Parallel Branches
  </h4>

  <!-- Branch Cards Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% branches.each do |branch| %>
      <%= link_to ruby_llm_agents.execution_path(branch[:id]), class: "block group" do %>
        <% status_border = case branch[:status]
             when "success" then "border-green-200 dark:border-green-800 hover:border-green-400 dark:hover:border-green-600"
             when "error" then "border-red-200 dark:border-red-800 hover:border-red-400 dark:hover:border-red-600"
             when "timeout" then "border-orange-200 dark:border-orange-800 hover:border-orange-400 dark:hover:border-orange-600"
             when "running" then "border-blue-200 dark:border-blue-800 hover:border-blue-400 dark:hover:border-blue-600"
             else "border-gray-200 dark:border-gray-700 hover:border-gray-400 dark:hover:border-gray-600"
           end %>
        <% status_bg = case branch[:status]
             when "success" then "bg-green-50/50 dark:bg-green-900/20"
             when "error" then "bg-red-50/50 dark:bg-red-900/20"
             when "timeout" then "bg-orange-50/50 dark:bg-orange-900/20"
             when "running" then "bg-blue-50/50 dark:bg-blue-900/20"
             else "bg-gray-50/50 dark:bg-gray-800/50"
           end %>

        <div class="relative p-4 rounded-lg border-2 <%= status_border %> <%= status_bg %> transition-all group-hover:shadow-md">
          <!-- Fast/Slow Badge -->
          <% if branch[:is_fastest] %>
            <span class="absolute -top-2 -right-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
              Fastest
            </span>
          <% elsif branch[:is_slowest] %>
            <span class="absolute -top-2 -right-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-orange-100 dark:bg-orange-900 text-orange-800 dark:text-orange-200">
              Slowest
            </span>
          <% end %>

          <!-- Branch Header -->
          <div class="flex items-center justify-between mb-3">
            <div class="flex items-center gap-2">
              <% case branch[:status]
                 when "success" %>
                <div class="w-6 h-6 rounded-full bg-green-100 dark:bg-green-900/50 flex items-center justify-center">
                  <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% when "error" %>
                <div class="w-6 h-6 rounded-full bg-red-100 dark:bg-red-900/50 flex items-center justify-center">
                  <svg class="w-4 h-4 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% when "timeout" %>
                <div class="w-6 h-6 rounded-full bg-orange-100 dark:bg-orange-900/50 flex items-center justify-center">
                  <svg class="w-4 h-4 text-orange-600 dark:text-orange-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% when "running" %>
                <div class="w-6 h-6 rounded-full bg-blue-100 dark:bg-blue-900/50 flex items-center justify-center">
                  <svg class="w-4 h-4 text-blue-600 dark:text-blue-400 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </div>
              <% else %>
                <div class="w-6 h-6 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% end %>

              <span class="font-medium text-gray-900 dark:text-gray-100"><%= branch[:name] %></span>
            </div>
          </div>

          <!-- Duration Bar -->
          <% duration = branch[:duration_ms] || 0 %>
          <% duration_pct = max_duration > 0 ? (duration.to_f / max_duration * 100).round : 0 %>
          <div class="mb-3">
            <div class="flex justify-between text-xs text-gray-500 dark:text-gray-400 mb-1">
              <span>Duration</span>
              <span><%= duration %>ms</span>
            </div>
            <div class="h-2 bg-gray-100 dark:bg-gray-700 rounded-full overflow-hidden">
              <% bar_color = case branch[:status]
                   when "success" then "bg-green-500"
                   when "error" then "bg-red-500"
                   when "timeout" then "bg-orange-500"
                   when "running" then "bg-blue-500"
                   else "bg-gray-400"
                 end %>
              <div class="h-full <%= bar_color %> rounded-full transition-all" style="width: <%= duration_pct %>%"></div>
            </div>
          </div>

          <!-- Metrics -->
          <div class="grid grid-cols-2 gap-2 text-xs">
            <div>
              <span class="text-gray-500 dark:text-gray-400">Tokens</span>
              <p class="font-medium text-gray-900 dark:text-gray-100"><%= number_to_human_short(branch[:total_tokens] || 0) %></p>
            </div>
            <div>
              <span class="text-gray-500 dark:text-gray-400">Cost</span>
              <p class="font-medium text-gray-900 dark:text-gray-100">$<%= number_with_precision(branch[:total_cost] || 0, precision: 4) %></p>
            </div>
          </div>

          <!-- Model -->
          <div class="mt-2 text-xs">
            <span class="font-mono text-gray-500 dark:text-gray-400"><%= branch[:model_id] %></span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Timing Comparison -->
  <% if branches.size > 1 %>
    <div class="mt-4 p-4 bg-gray-50 dark:bg-gray-800/50 rounded-lg">
      <h5 class="text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wide mb-3">Execution Timeline</h5>

      <div class="space-y-2">
        <% branches.sort_by { |b| b[:duration_ms] || 0 }.each do |branch| %>
          <% duration = branch[:duration_ms] || 0 %>
          <% duration_pct = max_duration > 0 ? (duration.to_f / max_duration * 100).round : 0 %>

          <div class="flex items-center gap-3">
            <span class="w-24 text-xs text-gray-600 dark:text-gray-400 truncate" title="<%= branch[:name] %>"><%= branch[:name] %></span>
            <div class="flex-1 h-4 bg-gray-200 dark:bg-gray-700 rounded overflow-hidden">
              <% bar_color = case branch[:status]
                   when "success" then "bg-cyan-500"
                   when "error" then "bg-red-500"
                   when "timeout" then "bg-orange-500"
                   when "running" then "bg-blue-500 animate-pulse"
                   else "bg-gray-400"
                 end %>
              <div class="h-full <%= bar_color %> rounded flex items-center justify-end pr-1" style="width: <%= duration_pct %>%">
                <span class="text-[10px] text-white font-medium"><%= duration %>ms</span>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <% fastest = branches.min_by { |b| b[:duration_ms] || Float::INFINITY } %>
      <% slowest = branches.max_by { |b| b[:duration_ms] || 0 } %>
      <% if fastest && slowest && fastest[:duration_ms] && slowest[:duration_ms] && fastest[:duration_ms] != slowest[:duration_ms] %>
        <p class="mt-3 text-xs text-gray-500 dark:text-gray-400">
          <span class="text-green-600 dark:text-green-400"><%= fastest[:name] %></span> finished
          <%= number_to_human_short(slowest[:duration_ms] - fastest[:duration_ms]) %>ms faster than
          <span class="text-orange-600 dark:text-orange-400"><%= slowest[:name] %></span>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
