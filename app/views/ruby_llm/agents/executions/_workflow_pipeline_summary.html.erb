<%# Pipeline Workflow Summary - Shows sequential step progression %>
<%# @param execution [RubyLLM::Agents::Execution] The pipeline workflow execution %>

<% steps = execution.pipeline_steps_detail %>

<div class="space-y-4">
  <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center gap-2">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"/>
    </svg>
    Pipeline Steps
  </h4>

  <!-- Step Progression Visualization -->
  <div class="relative">
    <div class="flex items-center justify-between overflow-x-auto pb-2">
      <% steps.each_with_index do |step, index| %>
        <div class="flex items-center flex-shrink-0">
          <!-- Step Card -->
          <%= link_to ruby_llm_agents.execution_path(step[:id]), class: "block group" do %>
            <div class="relative">
              <!-- Status Ring -->
              <% status_ring_color = case step[:status]
                   when "success" then "ring-green-400 dark:ring-green-500"
                   when "error" then "ring-red-400 dark:ring-red-500"
                   when "timeout" then "ring-orange-400 dark:ring-orange-500"
                   when "running" then "ring-blue-400 dark:ring-blue-500 animate-pulse"
                   else "ring-gray-300 dark:ring-gray-600"
                 end %>
              <% status_bg = case step[:status]
                   when "success" then "bg-green-50 dark:bg-green-900/30"
                   when "error" then "bg-red-50 dark:bg-red-900/30"
                   when "timeout" then "bg-orange-50 dark:bg-orange-900/30"
                   when "running" then "bg-blue-50 dark:bg-blue-900/30"
                   else "bg-gray-50 dark:bg-gray-800"
                 end %>

              <div class="w-32 p-3 rounded-lg ring-2 <%= status_ring_color %> <%= status_bg %> group-hover:shadow-md transition-shadow">
                <!-- Step Number & Status Icon -->
                <div class="flex items-center justify-between mb-2">
                  <span class="text-xs font-medium text-gray-500 dark:text-gray-400">Step <%= index + 1 %></span>
                  <% case step[:status]
                     when "success" %>
                    <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                  <% when "error" %>
                    <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                  <% when "timeout" %>
                    <svg class="w-4 h-4 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                    </svg>
                  <% when "running" %>
                    <svg class="w-4 h-4 text-blue-500 animate-spin" fill="none" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                  <% else %>
                    <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 102 0V6z" clip-rule="evenodd"/>
                    </svg>
                  <% end %>
                </div>

                <!-- Step Name -->
                <p class="text-sm font-medium text-gray-900 dark:text-gray-100 truncate" title="<%= step[:name] %>">
                  <%= step[:name] %>
                </p>

                <!-- Duration & Cost -->
                <div class="mt-2 flex items-center justify-between text-xs text-gray-500 dark:text-gray-400">
                  <span><%= step[:duration_ms] ? "#{step[:duration_ms]}ms" : "-" %></span>
                  <span>$<%= number_with_precision(step[:total_cost] || 0, precision: 4) %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <% unless index == steps.size - 1 %>
          <!-- Arrow Connector -->
          <div class="flex-shrink-0 mx-2">
            <% connector_color = case step[:status]
                 when "success" then "text-green-400 dark:text-green-500"
                 when "error" then "text-red-400 dark:text-red-500"
                 when "timeout" then "text-orange-400 dark:text-orange-500"
                 else "text-gray-300 dark:text-gray-600"
               end %>
            <svg class="w-6 h-6 <%= connector_color %>" fill="currentColor" viewBox="0 0 24 24">
              <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Detailed Steps Table (Collapsible) -->
  <div x-data="{ showDetails: false }">
    <button
      type="button"
      @click="showDetails = !showDetails"
      class="flex items-center gap-1 text-xs text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200"
    >
      <svg class="w-4 h-4 transition-transform" :class="{ 'rotate-180': showDetails }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
      </svg>
      <span x-text="showDetails ? 'Hide details' : 'Show details'"></span>
    </button>

    <div x-show="showDetails" x-cloak class="mt-3">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700 text-sm">
          <thead>
            <tr>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Step</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Agent</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Model</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
              <th class="px-3 py-2 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Duration</th>
              <th class="px-3 py-2 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Tokens</th>
              <th class="px-3 py-2 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Cost</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
            <% steps.each_with_index do |step, index| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50">
                <td class="px-3 py-2 text-gray-500 dark:text-gray-400"><%= index + 1 %></td>
                <td class="px-3 py-2">
                  <%= link_to step[:name], ruby_llm_agents.execution_path(step[:id]), class: "text-blue-600 dark:text-blue-400 hover:underline font-medium" %>
                </td>
                <td class="px-3 py-2 font-mono text-gray-600 dark:text-gray-300 text-xs"><%= step[:model_id] %></td>
                <td class="px-3 py-2">
                  <%= render "ruby_llm/agents/shared/status_badge", status: step[:status], size: :sm %>
                </td>
                <td class="px-3 py-2 text-right text-gray-600 dark:text-gray-300"><%= step[:duration_ms] ? "#{step[:duration_ms]}ms" : "-" %></td>
                <td class="px-3 py-2 text-right text-gray-600 dark:text-gray-300"><%= number_to_human_short(step[:total_tokens] || 0) %></td>
                <td class="px-3 py-2 text-right text-gray-600 dark:text-gray-300">$<%= number_with_precision(step[:total_cost] || 0, precision: 4) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
