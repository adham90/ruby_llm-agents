<%= turbo_frame_tag "dashboard" do %>
  <!-- Stats Cards -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <!-- Executions - Blue -->
    <div class="bg-white border border-gray-200 rounded-xl p-4">
      <div class="flex items-center justify-between">
        <p class="text-xs text-gray-500 uppercase tracking-wide font-medium">Executions</p>
        <span class="text-blue-500">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </span>
      </div>
      <p class="text-2xl font-bold text-gray-900 mt-2"><%= number_with_delimiter(@stats[:total_executions]) %></p>
    </div>

    <!-- Failed - Red -->
    <div class="bg-white border border-gray-200 rounded-xl p-4">
      <div class="flex items-center justify-between">
        <p class="text-xs text-gray-500 uppercase tracking-wide font-medium">Failed</p>
        <span class="text-red-500">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </span>
      </div>
      <p class="text-2xl font-bold text-red-600 mt-2"><%= number_with_delimiter(@stats[:failed]) %></p>
    </div>

    <!-- Total Cost - Amber -->
    <div class="bg-white border border-gray-200 rounded-xl p-4">
      <div class="flex items-center justify-between">
        <p class="text-xs text-gray-500 uppercase tracking-wide font-medium">Total Cost</p>
        <span class="text-amber-500">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </span>
      </div>
      <p class="text-2xl font-bold text-gray-900 mt-2">$<%= number_with_precision(@stats[:total_cost], precision: 4) %></p>
    </div>

    <!-- Total Tokens - Indigo -->
    <div class="bg-white border border-gray-200 rounded-xl p-4">
      <div class="flex items-center justify-between">
        <p class="text-xs text-gray-500 uppercase tracking-wide font-medium">Total Tokens</p>
        <span class="text-indigo-500">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
          </svg>
        </span>
      </div>
      <p class="text-2xl font-bold text-gray-900 mt-2"><%= number_with_delimiter(@stats[:total_tokens]) %></p>
    </div>
  </div>

  <!-- Activity Feed -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100">
    <div class="px-6 py-4 border-b border-gray-100">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <h3 class="text-lg font-semibold text-gray-900">Activity Feed</h3>
          <div class="flex items-center space-x-3 text-xs text-gray-400">
            <span class="flex items-center">
              <span class="w-2 h-2 bg-blue-500 rounded-full mr-1 animate-pulse"></span>
              running
            </span>
            <span class="flex items-center">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-1"></span>
              success
            </span>
            <span class="flex items-center">
              <span class="w-2 h-2 bg-red-500 rounded-full mr-1"></span>
              error
            </span>
            <span class="flex items-center">
              <span class="w-2 h-2 bg-yellow-500 rounded-full mr-1"></span>
              timeout
            </span>
          </div>
        </div>
        <%= link_to "View All", ruby_llm_agents.executions_path, class: "text-blue-600 hover:text-blue-700 text-sm font-medium" %>
      </div>
    </div>
    <div id="activity-feed" class="px-6 py-2">
      <% if @recent_executions.any? %>
        <% @recent_executions.each do |execution| %>
          <%= render partial: "rubyllm/agents/dashboard/execution_item", locals: { execution: execution } %>
        <% end %>
      <% else %>
        <div id="empty-state" class="py-10 text-center text-gray-500">
          <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          <p>No executions yet. Create an agent and make a call!</p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
