<div class="mb-6">
  <%= link_to "← Back to Executions", ruby_llm_agents.executions_path, class: "text-blue-600 hover:underline" %>
</div>

<!-- Header -->
<div class="bg-white rounded-lg shadow p-6 mb-6">
  <div class="flex items-start justify-between">
    <div>
      <div class="flex items-center space-x-3">
        <h2 class="text-2xl font-bold text-gray-900">
          <%= @execution.agent_type.gsub(/Agent$/, '') %>
        </h2>
        <span class="badge badge-<%= @execution.status %>">
          <%= @execution.status %>
        </span>
      </div>
      <p class="text-gray-500 mt-1">
        Execution #<%= @execution.id %> · v<%= @execution.agent_version %>
      </p>
    </div>
    <div class="text-right text-sm text-gray-500">
      <p><%= @execution.created_at.strftime("%B %d, %Y at %H:%M:%S") %></p>
      <p><%= time_ago_in_words(@execution.created_at) %> ago</p>
    </div>
  </div>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow p-4">
    <p class="text-sm text-gray-500 uppercase">Model</p>
    <p class="text-lg font-semibold text-gray-900"><%= @execution.model_id %></p>
  </div>

  <div class="bg-white rounded-lg shadow p-4">
    <p class="text-sm text-gray-500 uppercase">Duration</p>
    <p class="text-lg font-semibold text-gray-900"><%= number_with_delimiter(@execution.duration_ms || 0) %> ms</p>
  </div>

  <div class="bg-white rounded-lg shadow p-4">
    <p class="text-sm text-gray-500 uppercase">Total Tokens</p>
    <p class="text-lg font-semibold text-gray-900"><%= number_with_delimiter(@execution.total_tokens || 0) %></p>
  </div>

  <div class="bg-white rounded-lg shadow p-4">
    <p class="text-sm text-gray-500 uppercase">Total Cost</p>
    <p class="text-lg font-semibold text-gray-900">$<%= number_with_precision(@execution.total_cost || 0, precision: 6) %></p>
  </div>
</div>

<!-- Token Breakdown -->
<div class="bg-white rounded-lg shadow p-6 mb-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Token Usage</h3>
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
    <div>
      <p class="text-sm text-gray-500">Input Tokens</p>
      <p class="text-xl font-semibold"><%= number_with_delimiter(@execution.input_tokens || 0) %></p>
      <p class="text-xs text-gray-400">$<%= number_with_precision(@execution.input_cost || 0, precision: 6) %></p>
    </div>
    <div>
      <p class="text-sm text-gray-500">Output Tokens</p>
      <p class="text-xl font-semibold"><%= number_with_delimiter(@execution.output_tokens || 0) %></p>
      <p class="text-xs text-gray-400">$<%= number_with_precision(@execution.output_cost || 0, precision: 6) %></p>
    </div>
    <div>
      <p class="text-sm text-gray-500">Cached Tokens</p>
      <p class="text-xl font-semibold"><%= number_with_delimiter(@execution.cached_tokens || 0) %></p>
    </div>
    <div>
      <p class="text-sm text-gray-500">Cache Creation</p>
      <p class="text-xl font-semibold"><%= number_with_delimiter(@execution.cache_creation_tokens || 0) %></p>
    </div>
    <div>
      <p class="text-sm text-gray-500">Tokens/Second</p>
      <p class="text-xl font-semibold"><%= @execution.tokens_per_second || 'N/A' %></p>
    </div>
  </div>
</div>

<% if @execution.status_error? %>
  <!-- Error Details -->
  <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
    <h3 class="text-lg font-semibold text-red-800 mb-2">Error Details</h3>
    <p class="font-mono text-sm text-red-700 mb-2"><%= @execution.error_class %></p>
    <pre class="bg-red-100 rounded p-4 text-sm text-red-900 overflow-x-auto"><%= @execution.error_message %></pre>
  </div>
<% end %>

<!-- Parameters -->
<div class="bg-white rounded-lg shadow p-6 mb-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Parameters</h3>
  <pre class="bg-gray-50 rounded p-4 text-sm overflow-x-auto"><%= JSON.pretty_generate(@execution.parameters || {}) %></pre>
</div>

<!-- Response -->
<% if @execution.response.present? %>
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Response</h3>
    <pre class="bg-gray-50 rounded p-4 text-sm overflow-x-auto max-h-96"><%= JSON.pretty_generate(@execution.response) %></pre>
  </div>
<% end %>

<!-- Metadata -->
<% if @execution.metadata.present? && @execution.metadata.any? %>
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Metadata</h3>
    <pre class="bg-gray-50 rounded p-4 text-sm overflow-x-auto"><%= JSON.pretty_generate(@execution.metadata) %></pre>
  </div>
<% end %>
