<%= link_to ruby_llm_agents.execution_path(execution), class: "block px-6 py-4 hover:bg-gray-50 transition-colors" do %>
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <!-- Status Badge -->
      <span class="badge badge-<%= execution.status %>">
        <%= execution.status %>
      </span>

      <!-- Agent Name -->
      <div>
        <p class="font-medium text-gray-900">
          <%= execution.agent_type.gsub(/Agent$/, '') %>
        </p>
        <p class="text-sm text-gray-500">
          v<%= execution.agent_version %> Â· <%= execution.model_id %>
        </p>
      </div>
    </div>

    <div class="flex items-center space-x-6 text-sm">
      <!-- Tokens -->
      <div class="text-right">
        <p class="text-gray-900 font-medium"><%= number_with_delimiter(execution.total_tokens || 0) %></p>
        <p class="text-gray-500">tokens</p>
      </div>

      <!-- Cost -->
      <div class="text-right">
        <p class="text-gray-900 font-medium">$<%= number_with_precision(execution.total_cost || 0, precision: 4) %></p>
        <p class="text-gray-500">cost</p>
      </div>

      <!-- Duration -->
      <div class="text-right">
        <p class="text-gray-900 font-medium"><%= number_with_delimiter(execution.duration_ms || 0) %>ms</p>
        <p class="text-gray-500">duration</p>
      </div>

      <!-- Time -->
      <div class="text-right w-24">
        <p class="text-gray-500"><%= time_ago_in_words(execution.created_at) %> ago</p>
      </div>
    </div>
  </div>

  <% if execution.status_error? && execution.error_message.present? %>
    <div class="mt-2 text-sm text-red-600 bg-red-50 rounded px-3 py-2">
      <strong><%= execution.error_class %>:</strong> <%= truncate(execution.error_message, length: 100) %>
    </div>
  <% end %>
<% end %>
