<div class="space-y-6">
  <!-- Page Header with Date Range Picker -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Analytics</h1>
      <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
        Usage trends and performance metrics
      </p>
    </div>

    <%= render "date_range_picker", selected_range: @selected_range %>
  </div>

  <!-- Summary Cards -->
  <%= render "summary_cards", summary: @summary %>

  <!-- Usage Trends Chart -->
  <%= render "cost_chart", trend_data: @trend_data, days: @days %>

  <!-- Agent Comparison -->
  <%= render "agent_comparison", agent_stats: @agent_stats %>

  <!-- Top Errors + Performance Metrics -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <%= render "top_errors", top_errors: @top_errors %>
    <%= render "performance_metrics", performance: @performance %>
  </div>
</div>
