<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>RubyLLM Agents Dashboard</title>

    <!-- Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Chartkick for charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartkick@5.0.1"></script>

    <!-- Turbo -->
    <%= javascript_include_tag "turbo", type: "module" rescue nil %>

    <!-- ActionCable (if available) -->
    <%= action_cable_meta_tag rescue nil %>

    <!-- Real-Time Updates Script (ActionCable with polling fallback) -->
    <script type="module">
      document.addEventListener('DOMContentLoaded', function() {
        const activityFeed = document.getElementById('activity-feed');
        const liveIndicator = document.getElementById('live-indicator');
        const dashboardFrame = document.querySelector('turbo-frame#dashboard');

        // Only run on dashboard page
        if (!activityFeed && !dashboardFrame) return;

        let useWebSocket = true;
        let pollInterval = null;
        const POLL_INTERVAL_MS = 5000; // 5 seconds for polling fallback

        // Try ActionCable WebSocket first
        function tryWebSocket() {
          const cableUrl = document.querySelector('meta[name="action-cable-url"]')?.content;
          if (!cableUrl) {
            console.log('[RubyLLM::Agents] No ActionCable URL found, using polling');
            startPolling();
            return;
          }

          try {
            const wsUrl = cableUrl.replace(/^http/, 'ws');
            const ws = new WebSocket(wsUrl);

            ws.onopen = function() {
              ws.send(JSON.stringify({
                command: 'subscribe',
                identifier: JSON.stringify({ channel: 'RubyLLM::Agents::ExecutionsChannel' })
              }));
            };

            ws.onmessage = function(event) {
              const data = JSON.parse(event.data);

              if (data.type === 'confirm_subscription') {
                updateIndicator('live');
                if (pollInterval) {
                  clearInterval(pollInterval);
                  pollInterval = null;
                }
                return;
              }

              if (data.type === 'ping' || data.type === 'welcome') return;

              if (data.message && activityFeed) {
                handleExecutionUpdate(data.message);
              }
            };

            ws.onclose = function() {
              console.log('[RubyLLM::Agents] WebSocket closed, falling back to polling');
              startPolling();
            };

            ws.onerror = function() {
              console.log('[RubyLLM::Agents] WebSocket error, falling back to polling');
              ws.close();
            };

            // Timeout - if not connected in 3 seconds, fall back to polling
            setTimeout(() => {
              if (ws.readyState !== WebSocket.OPEN) {
                console.log('[RubyLLM::Agents] WebSocket timeout, falling back to polling');
                ws.close();
              }
            }, 3000);

          } catch (e) {
            console.log('[RubyLLM::Agents] WebSocket not available:', e);
            startPolling();
          }
        }

        function handleExecutionUpdate(message) {
          const { action, id, html } = message;
          if (!html || !activityFeed) return;

          const emptyState = document.getElementById('empty-state');
          if (emptyState) emptyState.remove();

          if (action === 'created') {
            activityFeed.insertAdjacentHTML('afterbegin', html);
            const items = activityFeed.querySelectorAll('[id^="execution-"]');
            if (items.length > 10) {
              items[items.length - 1].remove();
            }
          } else if (action === 'updated') {
            const existing = document.getElementById(`execution-${id}`);
            if (existing) existing.outerHTML = html;
          }
        }

        function startPolling() {
          if (pollInterval) return;

          updateIndicator('polling');

          pollInterval = setInterval(function() {
            if (dashboardFrame) {
              if (dashboardFrame.src) {
                dashboardFrame.reload();
              } else {
                dashboardFrame.src = window.location.href;
              }
            }
          }, POLL_INTERVAL_MS);
        }

        function updateIndicator(status) {
          if (!liveIndicator) return;

          if (status === 'live') {
            liveIndicator.innerHTML = `
              <span class="w-2 h-2 bg-green-500 rounded-full mr-1 animate-pulse"></span>
              Live
            `;
            liveIndicator.className = 'flex items-center text-xs text-green-600';
          } else if (status === 'polling') {
            liveIndicator.innerHTML = `
              <span class="w-2 h-2 bg-blue-500 rounded-full mr-1"></span>
              Auto-refresh
            `;
            liveIndicator.className = 'flex items-center text-xs text-blue-600';
          }
        }

        // Start by trying WebSocket
        tryWebSocket();
      });
    </script>

    <style>
    /* Custom styles for the dashboard */
    .stat-card {
      @apply bg-white rounded-xl shadow-sm border border-gray-100 p-4 transition-shadow;
    }
    .stat-card:hover {
      @apply shadow-md;
    }
    .stat-value {
      @apply text-2xl font-bold text-gray-900 mt-2;
    }
    @media (min-width: 1024px) {
      .stat-value {
        font-size: 1.5rem;
      }
    }
    .stat-label {
      @apply text-xs text-gray-500 uppercase tracking-wide font-medium;
    }
    .chart-card {
      @apply bg-white rounded-xl shadow-sm border border-gray-100 p-6;
    }
    .nav-link {
      @apply px-4 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-md transition-colors;
    }
    .nav-link.active {
      @apply bg-blue-50 text-blue-700;
    }
    .badge {
      @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
    }
    .badge-running {
      @apply bg-blue-100 text-blue-800;
    }
    .badge-success {
      @apply bg-green-100 text-green-800;
    }
    .badge-error {
      @apply bg-red-100 text-red-800;
    }
    .badge-timeout {
      @apply bg-yellow-100 text-yellow-800;
    }
  </style>
  </head>

  <body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 h-16 flex items-center">
      <div class="max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
          <div class="flex items-center space-x-8">
            <%= link_to ruby_llm_agents.root_path, class: "flex items-center space-x-2" do %>
              <span class="text-lg">ðŸ¤–</span>
              <span class="font-semibold text-gray-900">RubyLLM Agents</span>
            <% end %>

            <nav class="flex items-center space-x-1">
              <%= link_to ruby_llm_agents.root_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md #{current_page?(ruby_llm_agents.root_path) ? 'bg-gray-200' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'}" do %>
                <svg
                  class="w-4 h-4 mr-1.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                  />
                </svg>
                Dashboard
              <% end %>

              <%= link_to ruby_llm_agents.agents_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md #{request.path.start_with?(ruby_llm_agents.agents_path) ? 'bg-gray-200' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'}" do %>
                <svg
                  class="w-4 h-4 mr-1.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  />
                </svg>
                Agents
              <% end %>

              <%= link_to ruby_llm_agents.executions_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md #{current_page?(ruby_llm_agents.executions_path) ? 'bg-gray-200' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'}" do %>
                <svg
                  class="w-4 h-4 mr-1.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
                  />
                </svg>
                Executions
              <% end %>
            </nav>
          </div>

          <div class="flex items-center space-x-4">
            <span id="live-indicator" class="flex items-center text-xs text-gray-400">
              <span class="w-2 h-2 bg-gray-300 rounded-full mr-1"></span>
              Connecting...
            </span>
            <span class="text-sm text-gray-500">
              <%= Time.current.strftime("%B %d, %Y") %>
            </span>
          </div>
        </div>
      </div>
    </header>

    <!-- Main content -->
    <main class="max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-8 h-full">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="border-t bg-white mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <p class="text-center text-sm text-gray-500">
          Powered by
          <a href="https://github.com/adham90/ruby_llm-agents" class="text-blue-600 hover:underline">ruby_llm-agents</a>
        </p>
      </div>
    </footer>
  </body>
</html>
