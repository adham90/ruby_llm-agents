# frozen_string_literal: true

class <%= class_name %>Transcriber < ApplicationTranscriber
  # Model configuration
  model "<%= options[:model] %>"
<% if options[:language] -%>
  language "<%= options[:language] %>"
<% end -%>
<% if options[:output_format] != "text" -%>
  output_format :<%= options[:output_format] %>
<% end -%>
<% if options[:cache] -%>

  # Caching
  cache_for <%= options[:cache] %>
<% end -%>

